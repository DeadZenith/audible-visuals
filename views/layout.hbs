    {{{body}}}
  <p id="notification"> drag and drop a song!</p>
  <script>
      var nav = false;
      function onKeyDown(e) {
          switch (e.which) {
              case 78:
                  if(!nav){
                      $('nav').css('visibility','visible');
                      nav = !nav;
                  }
                  else {
                      $('nav').css('visibility','hidden');
                      nav = !nav;
                  }
          }
      }
      document.addEventListener('keydown', onKeyDown, false);
      $('#notification').velocity('fadeIn', { delay: 250, duration: 1500 });
  </script>
